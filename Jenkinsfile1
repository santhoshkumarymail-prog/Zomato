pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/santhoshkumarymail-prog/Zomato.git'
            }
        }
        
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t santhoshky/zomatoapp:1.0 ."
            }
        }
        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push santhoshky/zomatoapp:1.0 "
                    }
                }
            }
        }
    }
}
