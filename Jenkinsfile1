pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/santhoshkumarymail-prog/Zomato.git'
            }
        }
        stage("Install NPM Dependencies") {
            steps {
                sh "npm install"
            }
        }
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t santhoshky/zomatoapp:1.0 ."
            }
        }
    }
}
